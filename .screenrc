shell $SHELL

defutf8 on
defkanji utf-8
encoding utf-8 utf-8
defencoding utf-8

startup_message off
defflow off

escape ^Tt
autodetach on
bell_msg "^G"
vbell off
defscrollback 4000
caption always "%{= wb} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wk} [%l] %{=b wb}%y/%m/%d(%D) %{=b wm}%c"

defbce "on"
# term rxvt-256color
# term xterm-256color
termcapinfo xterm-256color 'is=^[r^[mJ^[H^[?7h^[?1;4;6l'']]]]]'""
termcapinfo rxvt-unicode 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
altscreen "on"

bind h prev
bind j next

# bind v screen -t "vim" vim
# bind z screen -t "zsh" zsh
# bind i screen -t "ipy" ipython

bind = resize  =
bind + resize +2
bind - resize -2
