[user]
    name  = Takeshi Kanmae
    email = tkanmae@gmail.com

[core]
    excludesfile = ~/.gitignore_global

[url "https://"]
    insteadOf = git://

[rebase]
    autostash = true

[merge]
    tool = vimdiff

[pager]
    # Make sure git/contrib/diff-highlight is in PATH.
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less

[diff]
	compactionHeuristic = true
[difftool]
    prompt = false
[difftool.latex]
    cmd = git-latexdiff "$LOCAL" "$REMOTE"

[color]
    ui = auto
    status = auto
    diff = auto

[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f

[alias]
    ad = add
    br = branch
    ci = commit
    co = checkout
    sh = show
    st = status
    amend = commit --amend
    # log
    ld = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
    lnc = log --pretty=format:"%h\\ %s\\ [%cn]"
    lds = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
    oneline = log --oneline
    # fetch
    ft = fetch
    fo = fetch origin
    # diff
    df = diff
    dc = diff --cached
    dm = diff master
    dw = diff --color-words
    d1 = diff HEAD~
    d2 = diff HEAD~~
    d3 = diff HEAD~~~
    d4 = diff HEAD~~~~
    d5 = diff HEAD~~~~~
    d6 = diff HEAD~~~~~~
    d7 = diff HEAD~~~~~~~
    d8 = diff HEAD~~~~~~~~
    d9 = diff HEAD~~~~~~~~~
    # http://d.hatena.ne.jp/thinca/20120924/1348491052
    cancel = !git commit -a -m 'Temporary commit for cancel' && git reset --hard HEAD~
    latexdiff = difftool -t latex
	show-pr = "!f() { git log --merges --oneline --reverse --ancestry-path $1...master | grep 'Merge pull request #' | head -n 1; }; f"
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
