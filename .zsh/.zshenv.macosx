# ------------------------------------------------------------------------------
# PATH
# ------------------------------------------------------------------------------
typeset -U path
path=(# User
      $HOME/.local/bin(N-/)
      # Go
      /usr/local/go/bin(N-)
      $HOME/.local/go/bin(N-)
      # Haskell
      $HOME/.cabal/bin(N-)
      # MOSART
      /usr/local/MOSART/V1.70/bin(N-/)
      # System
      /usr/local/bin(N-/)
      # GNU coreutils via Homebrew
      /usr/local/opt/coreutils/libexec/gnubin(N/)
      # MacTeX
      /usr/local/texlive/2013/bin/x86_64-darwin(N-/)
      # System
      /usr/sbin(N-/)
      /usr/bin(N-/)
      /sbin(N-)
      /bin(N-))

# ------------------------------------------------------------------------------
# MANPATH
# ------------------------------------------------------------------------------
typeset -U manpath
manpath=(# Haskell
         $HOME/.cabal/share/man(N-)
         # system
         /usr/local/share/man(N-/)
         # GNU coreutils via Homebrew
         /usr/local/opt/coreutils/libexec/gnuman
         # system
         /usr/share/man(N-/))

# ------------------------------------------------------------------------------
# Python
# ------------------------------------------------------------------------------
export PIP_DOWNLOAD_CACHE=~/Library/Caches/pip

# ------------------------------------------------------------------------------
# Go
# ------------------------------------------------------------------------------
export GOPATH=$HOME/.local/go

# ------------------------------------------------------------------------------
# pkg-config
# ------------------------------------------------------------------------------
export PKG_CONFIG_PATH=/opt/X11/lib/pkgconfig
