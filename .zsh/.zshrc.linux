# ------------------------------------------------------------------------------
# PATH
# ------------------------------------------------------------------------------
path+=(
    /usr/local/cuda/bin(N-/)
    /usr/cuda/bin(N-/)
    /opt/intel/bin(N-/)
)


# ------------------------------------------------------------------------------
# LD_LIBRARY_PATH
# ------------------------------------------------------------------------------
typeset -Tx LD_LIBRARY_PATH ld_library_path
typeset -U ld_library_path
ld_library_path=(
    /usr/local/cuda/lib64(N-/)
    /usr/cuda/lib64(N-/)
)
